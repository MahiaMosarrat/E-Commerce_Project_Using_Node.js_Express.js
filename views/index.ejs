      </p>
      <div class="read_bt_1"><a href="/">Read More</a></div>
    </div>
  </div>

  <!--choose section end -->

  <!--offer section start -->
  <div class="choose_section" style="background-color: #fff">
    <div>
      <h2
        style="
          margin-left: 10px;
          margin-top: 10px;
          font-size: 20px;
          font-weight: 600;
          color: rgb(90, 47, 161);
        "
      >
        <span
          style="
            border-bottom: 1px solid rgb(218, 212, 212);
            padding-bottom: 5px;
          "
          >Up to 60% off | New arrivals and top customer picks</span
        >
      </h2>
      <div class="image_offer" style="margin: 0 10px">
        <img
          src="myImages/banner_pic.jpg"
          style="border: 2px double rgb(150, 114, 208)"
        />
      </div>
      <div class="image_offer" style="margin: 0 10px">
        <img
          src="myImages/discount_pic.jpg"
          style="border: 2px double rgb(38, 210, 147); margin-top: 5px"
        />
      </div>
    </div>
  </div>

  <!--choose section end -->

  <!--contact section start -->
  <div class="contact_section layout_padding">
    <div class="container">
      <div class="image_2">
        <img src="myImages/contact_us.png" style="height: 60px" />
      </div>
      <h1 class="about_taital">Contact Us</h1>
      <div class="row">
        <div
          class="col-md-6"
          style="
            background-image: url(myImages/baby-supplies.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-position-x: 30%;
            opacity: 0.6;
          "
        >
          <div class="mail_sectin">
            <input
              type="text"
              class="email-bt"
              placeholder="Your Name"
              name="Name"
            />
            <input
              type="text"
              class="email-bt"
              placeholder="Email"
              name="Name"
            />
            <input
              type="text"
              class="email-bt"
              placeholder="Phone Number"
              name="Name"
            />
            <textarea
              class="massage-bt"
              placeholder="Massage"
              rows="5"
              id="comment"
              name="Massage"
            ></textarea>
            <div class="send_bt"><a href="#">Send</a></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_main">
            <div class="map-responsive">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3650.489451881827!2d90.42375860000001!3d23.80118829999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c7b0526262e5%3A0x23f11c5b9e0faf65!2s2%2C%20Level%2C%201%20Baridhara%20J%20Block%2C%20Dhaka%201212!5e0!3m2!1sen!2sbd!4v1740240274792!5m2!1sen!2sbd"
                width="600"
                height="450"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    document.addEventListener("DOMContentLoaded", function () {
      const socket = io();
      const messagesDiv = document.getElementById("messages");

      function addClassesToMessages() {
        var messages = messagesDiv.querySelectorAll("p");
        messages.forEach(function (message, index) {
          if (index % 2 === 0) {
            message.classList.add("even");
            message.classList.remove("odd");
          } else {
            message.classList.add("odd");
            message.classList.remove("even");
          }
        });
      }

      socket.on("message", (message) => {
        messagesDiv.innerHTML += `<p>${message}</p>`;
        addClassesToMessages();
      });

      function sendMessage() {
        const messageInput = document.getElementById("messageInput");
        const message = messageInput.value;
        socket.emit("message", message);
        messageInput.value = "";
      }

      const openChatButton = document.getElementById("openChatButton");
      const closeChatButton = document.getElementById("closeChatButton");
      const chatContainer = document.getElementById("chatContainer");

      openChatButton.addEventListener("click", () => {
        chatContainer.style.display = "block";
      });

      closeChatButton.addEventListener("click", () => {
        chatContainer.style.display = "none";
      });

      const sendMessageButton = document.getElementById("sendMessageButton");
      sendMessageButton.addEventListener("click", sendMessage);
    });
  </script>
</main>
